rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidPDFType() {
      return request.resource.contentType == 'application/pdf';
    }
    
    function isValidDocumentType() {
      return request.resource.contentType.matches('application/(pdf|msword|vnd.openxmlformats-officedocument.wordprocessingml.document)') ||
             request.resource.contentType.matches('image/.*');
    }
    
    function isUnderFileSize(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024;
    }
    
    // Resumes - PDF and documents, max 10MB - only owner can write
    match /resumes/{userId}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) && isUnderFileSize(10);
      allow delete: if isOwner(userId);
    }
    
    // Profile images - only images, max 5MB - only owner can write
    match /profile-images/{userId}/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId) && isValidImageType() && isUnderFileSize(5);
      allow delete: if isOwner(userId);
    }
    
    // Company logos - only images, max 5MB - only company owner can write
    match /company-logos/{companyId}/{fileName} {
      allow read: if true;
      allow write: if isOwner(companyId) && isValidImageType() && isUnderFileSize(5);
      allow delete: if isOwner(companyId);
    }
    
    // Institute logos - only images, max 5MB - only institute owner can write
    match /institute-logos/{instituteId}/{fileName} {
      allow read: if true;
      allow write: if isOwner(instituteId) && isValidImageType() && isUnderFileSize(5);
      allow delete: if isOwner(instituteId);
    }
    
    // Course materials - documents and images, max 20MB
    match /course-materials/{path=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isUnderFileSize(20);
      allow delete: if isSignedIn();
    }
    
    // Job attachments - documents, max 10MB
    match /job-attachments/{path=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isUnderFileSize(10);
      allow delete: if isSignedIn();
    }
    
    // Chat attachments - images and documents, max 10MB
    match /chat-attachments/{path=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isUnderFileSize(10);
      allow delete: if isSignedIn();
    }
    
    // General documents - various types, max 20MB (for applications, transcripts, etc.)
    // Uses userId subfolder for ownership validation
    match /documents/{userId}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) && isUnderFileSize(20);
      allow delete: if isOwner(userId);
    }
    
    // Application documents - for student applications
    match /applications/{userId}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) && isUnderFileSize(20);
      allow delete: if isOwner(userId);
    }
    
    // Transcripts
    match /transcripts/{userId}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) && isUnderFileSize(10);
      allow delete: if isOwner(userId);
    }
    
    // ID copies
    match /id-copies/{userId}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) && isUnderFileSize(10);
      allow delete: if isOwner(userId);
    }
    
    // Certificates
    match /certificates/{userId}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) && isUnderFileSize(10);
      allow delete: if isOwner(userId);
    }
  }
}
